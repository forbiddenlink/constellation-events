## Mapbox Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=pk...
NEXT_PUBLIC_LIGHTPOLLUTION_TILES=https://tiles.constellation.app/lightpollution/{z}/{x}/{y}.png

## Weather API Configuration
# Choose provider: auto, openmeteo, openweather, clearoutside, visualcrossing
# auto = try OpenWeather (if key present) then fallback to Open-Meteo
WEATHER_API_PROVIDER=auto
OPENWEATHER_API_KEY=your_openweather_api_key
# CLEAROUTSIDE_API_KEY=your_clearoutside_api_key
# VISUALCROSSING_API_KEY=your_visualcrossing_api_key

## Cloudflare R2 Configuration (for tile hosting)
R2_BUCKET=constellation-tiles
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=...
R2_SECRET_ACCESS_KEY=...
R2_PUBLIC_BASE=https://tiles.constellation.app
R2_TILE_PREFIX=lightpollution
TILE_UPDATE_CADENCE=daily
TILE_ZOOM_RANGE=0-7
TILE_PROCESSES=2
ENABLE_LOCAL_CLEANUP=true
RAW_RETENTION_DAYS=3
COG_RETENTION_DAYS=14
LOG_RETENTION_DAYS=30
TILE_RUN_HOUR=3
TILE_RUN_MINUTE=15

## Earthdata Configuration (for VIIRS downloads)
EARTHDATA_USERNAME=your_earthdata_username
LAADS_DOWNLOAD_TOKEN=your_lads_download_token
# EARTHDATA_TOKEN=legacy_fallback_token
VIIRS_COLLECTION_ID=C3363944097-LANCEMODIS
# VIIRS_TARGET_DATE=2026-02-06

## Marketplace storage (optional override, defaults to data/marketplace)
# MARKETPLACE_DATA_DIR=/absolute/path/to/marketplace-data
# MARKETPLACE_WRITE_TOKEN=change-me-for-write-protection
# MARKETPLACE_WRITE_RATE_LIMIT_MAX=10
# MARKETPLACE_WRITE_RATE_LIMIT_WINDOW_MS=60000
# MARKETPLACE_IMAGE_PREFIX=marketplace/images
